{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "paths": {
      "@stablebond/types": ["./packages/types/src"],
      "@stablebond/sdk": ["./packages/sdk/src"]
    }
  },
  "include": ["packages/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
